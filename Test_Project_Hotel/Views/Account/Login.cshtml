@model Test_Project_Hotel.ViewModels.Users.LoginViewModel

<body>
    <div class="container">
        <form method="post" asp-controller="Account" asp-action="Login" class="form-horizontal"
              asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <h2 left:20%; style="margin-left: 350px;" ;>Log in</h2>
                <label class="control-label col-sm-2" asp-for="Email">Email:</label>
                <div class="col-sm-5">
                    <input type="email" asp-for="Email" class="form-control" id="email" placeholder="Enter email" name="email">
                </div>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" asp-for="Password">Password:</label>
                <div class="col-sm-5">
                    <input type="password" class="form-control" asp-for="Password" id="pwd" placeholder="Enter password">
                </div>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-5">
                    <div class="checkbox">
                        <label><input type="checkbox" asp-for="RememberMe" name="remember"> Remember this account?</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-5">
                    <button type="submit" class="btn btn-default">Log in</button>
                    <a class="btn btn-default" asp-controller="Account" asp-action="Register">Register</a>
                </div>
            </div>
        </form>
    </div>
</body>

