@model Test_Project_Hotel.ViewModels.Users.EditUserViewModel
@{
    ViewBag.Title = "Change user's Email ";
}
<h2>Changing user's Email</h2>
<form method="post" asp-controller="Users" asp-action="EditUser">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="Email"></label><br />
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-4">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</form>
<a asp-action="Index" style="float: right;">Back</a>