@model Test_Project_Hotel.ViewModels.Users.CreateUserViewModel
@{
    ViewBag.Title = "Add user";
}
<h2>Add new user</h2>
<form method="post" asp-controller="Users" asp-action="CreateUser">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="Email"></label><br />
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
            <label asp-for="Password"></label><br />
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>
            <label asp-for="PasswordConfirm"></label><br />
            <input asp-for="PasswordConfirm" class="form-control" />
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-4">
            <input type="submit" value="Add" class="btn btn-default" />
        </div>
    </div>
</form>
<a asp-action="Index" style="float: right;">Back</a>