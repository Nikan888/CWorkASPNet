@model Test_Project_Hotel.ViewModels.Users.CreateUserAdminViewModel
@{
    ViewBag.Title = "Add admin";
}
<h2>Add new admin</h2>
<form asp-action="CreateAdmin" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="Email" class="control-label">Email</label>
            <input type="text" asp-for="Email" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="Password" class="control-label">Password</label>
            <input type="text" asp-for="Password" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-4">
            <input type="submit" value="Add" class="btn btn-default" />
        </div>
    </div>
</form>
<a asp-action="Index" style="float: right;">Back</a>