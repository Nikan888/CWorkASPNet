@model Test_Project_Hotel.ViewModels.Users.ChangePasswordViewModel
@{
    ViewBag.Title = "Password changw";
}
<h2>Change password for user @Model.Email</h2>
<form asp-action="ChangePassword" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />
    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="NewPassword" class="control-label">New password</label>
            <input type="text" asp-for="NewPassword" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-4">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</form>
<a asp-action="Index" style="float: right;">Back</a>