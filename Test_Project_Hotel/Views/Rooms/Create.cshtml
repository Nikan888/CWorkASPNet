@model Test_Project_Hotel.ViewModels.Rooms.CreateRoomViewModel
@{
    ViewBag.Title = "Add room";
}
<h2>Add new room</h2>
<form asp-action="Create">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="RoomType" class="control-label">Room type</label>
            <input type="text" asp-for="RoomType" class="form-control" />
            <label asp-for="RoomDescription" class="control-label">Room description</label>
            <input type="text" asp-for="RoomDescription" class="form-control" />
            <label asp-for="RoomCapacity" class="control-label">Room capacity</label>
            <input type="text" asp-for="RoomCapacity" class="form-control" />
            <label asp-for="RoomPrice" class="control-label">Room price, USD</label>
            <input type="text" asp-for="RoomPrice" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-4">
            <input type="submit" value="Add" class="btn btn-default" />
        </div>
    </div>
</form>
<a asp-action="Index" style="float: right;">Back</a>