@model Test_Project_Hotel.ViewModels.Workers.EditWorkerViewModel
@{
    ViewData["Title"] = "Edit worker ";
}
<h2>Edit worker </h2>
<form asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Id" type="hidden" />
    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="WorkerFIO" class="control-label">Worker FIO</label>
            <input type="text" asp-for="WorkerFIO" class="form-control" />
            <label asp-for="WorkerPost" class="control-label">Worker's post</label>
            <input type="text" asp-for="WorkerPost" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-4">
            <input type="submit" value="Edit" class="btn btn-default" />
        </div>
    </div>
</form>
<a asp-action="Index" style="float: right;">Back</a>
