@model IEnumerable<Test_Project_Hotel.Models.Worker>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Index</h2>
<p>
    <a asp-action="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WorkerFIO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkerPost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkerFIO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkerPost)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.WorkerID">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.WorkerID">Подробно</a> |
                    <a asp-action="Delete" asp-route-id="@item.WorkerID">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
