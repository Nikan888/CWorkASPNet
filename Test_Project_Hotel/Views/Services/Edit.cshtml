@model Test_Project_Hotel.ViewModels.Services.EditServiceViewModel
@{
    ViewData["Title"] = "Edit services";
}
<h2>Edit services</h2>
<form asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Id" type="hidden" />
    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="ServiceName" class="control-label">Service name</label>
            <input type="text" asp-for="ServiceName" class="form-control" />
            <label asp-for="ServiceDescription" class="control-label">Service description</label>
            <input type="text" asp-for="ServiceDescription" class="form-control" />
            <label asp-for="EntryDate" class="control-label">Entry date</label>
            <input type="text" asp-for="EntryDate" class="form-control" />
            <label asp-for="DepartureDate" class="control-label">Departure date</label>
            <input type="text" asp-for="DepartureDate" class="form-control" />
            <label asp-for="ClientFIO" class="control-label">Client FIO</label>
            <input type="text" asp-for="ClientFIO" class="form-control" />
            <label asp-for="RoomType" class="control-label">Room type</label>
            <input type="text" asp-for="RoomType" class="form-control" />
            <label asp-for="WorkerFIO" class="control-label">Worker FIO</label>
            <input type="text" asp-for="WorkerFIO" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-4">
            <input type="submit" value="Edit" class="btn btn-default" />
        </div>
    </div>
</form>
<a asp-action="Index">Back</a>