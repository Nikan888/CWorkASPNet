@model Test_Project_Hotel.ViewModels.Services.EditServiceViewModel
@{
    ViewData["Title"] = "Edit services";
}
<h2>Edit services</h2>
<form asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Id" type="hidden" />
    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="ClientID" class="control-label">Client</label>
            <div id="g">
                <select asp-for="ClientID" class="form-control">
                    @foreach (var item in ViewBag.clients)
                    {
                        <option value="@item.Value">@item.Key</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="RoomID" class="control-label">Room</label>
            <div id="g">
                <select asp-for="RoomID" class="form-control">
                    @foreach (var item in ViewBag.rooms)
                    {
                        <option value="@item.Value">@item.Key</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="WorkerID" class="control-label">Сотрудник</label>
            <div id="g">
                <select asp-for="WorkerID" class="form-control">
                    @foreach (var item in ViewBag.workers)
                    {
                        <option value="@item.Value">@item.Key</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-4">
            <input type="submit" value="Edit" class="btn btn-default" />
        </div>
    </div>
</form>
<a asp-action="Index">Back</a>
@section scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#id').change(function (e) {
                var name = $('#id').val();
                $('#g').load('@Url.Action("FilterGroups", "Account")?id='+name)
            });
        });
        $(document).ready(function () {
            var name = $('#id').val();
            $('#g').load('@Url.Action("FilterGroups", "Account")?id='+name)
        });
    </script>
}