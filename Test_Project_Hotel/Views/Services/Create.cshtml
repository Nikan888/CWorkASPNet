@model Test_Project_Hotel.Models.Service
@{
    ViewData["Title"] = "Add service";
}
<h2>Add service</h2>
<form asp-action="Create">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="ClientID" class="control-label">Client</label>
            <div id="g">
                <select asp-for="ClientID" class="form-control">
                    @foreach (var item in ViewBag.clients)
                    {
                        <option value="@item.Value">@item.Key</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="RoomID" class="control-label">Room</label>
            <div id="g">
                <select asp-for="RoomID" class="form-control">
                    @foreach (var item in ViewBag.rooms)
                    {
                        <option value="@item.Value">@item.Key</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="WorkerID" class="control-label">Сотрудник</label>
            <div id="g">
                <select asp-for="WorkerID" class="form-control">
                    @foreach (var item in ViewBag.workers)
                    {
                        <option value="@item.Value">@item.Key</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-4">
            <input type="submit" value="Add" class="btn btn-default" />
        </div>
    </div>
</form>
<a asp-action="Index" style="float: right;">Back</a>